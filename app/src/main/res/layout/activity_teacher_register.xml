<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeacherRegister"
    android:background="@color/colorAccent"
    >

    <TextView
        android:id="@+id/teacherRegister"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="0dp"
        android:text="Teacher Registration"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:textStyle="bold"
        android:background="@drawable/text_edit"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <LinearLayout
        android:id="@+id/registerItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/teacherRegister"
        android:orientation="vertical"
        android:paddingTop="100dp">

        <EditText
            android:id="@+id/teacherName"
            android:hint="Name"
            android:textColorHint="@color/textColor"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/name"
            android:background="@drawable/edit_round"
            android:drawablePadding="10dp"
            android:paddingLeft="10dp"
            android:inputType="text"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/teacherId"
            android:hint="TeacherId"
            android:textColorHint="@color/textColor"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edit_round"
            android:drawableLeft="@drawable/id"
            android:drawablePadding="10dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/teacherEmail"
            android:hint="@string/email"
            android:textColorHint="@color/textColor"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edit_round"
            android:drawableLeft="@drawable/email"
            android:drawablePadding="10dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/teacherPhone"
            android:hint="Phone No."
            android:textColorHint="@color/textColor"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edit_round"
            android:drawableLeft="@drawable/phone"
            android:drawablePadding="10dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/password"
            android:hint="Password"
            android:textColorHint="@color/textColor"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edit_round"
            android:drawableLeft="@drawable/password"
            android:drawablePadding="10dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="5dp"
            android:inputType="textPassword"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/retypePassword"
            android:hint="Retype Password"
            android:textColorHint="@color/textColor"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edit_round"
            android:drawableLeft="@drawable/password"
            android:drawablePadding="10dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="5dp"
            android:inputType="textPassword"
            android:textColor="@color/black"/>

    </LinearLayout>

    <Button
        android:id="@+id/teacherRegisterButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/registerItem"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_round"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:text="Register" />
</RelativeLayout>