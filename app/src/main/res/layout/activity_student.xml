<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context=".StudentActivity">
    <LinearLayout
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:background="#80485563"
        android:orientation="vertical">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#80485563">

        <RelativeLayout
            android:layout_marginTop="32dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textDashboard"
                android:textSize="24sp"
                android:textColor="#FFFF"
                android:text="My Dashboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_below="@+id/textDashboard"
                android:layout_marginTop="6dp"
                android:textSize="14sp"
                android:textColor="#52BAFF"
                android:id="@+id/countSubjectTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <ImageButton

                android:layout_alignParentRight="true"
                android:id="@+id/profileButton"
                android:background="@color/imageBackground"
                android:src="@drawable/ic_profile"
                android:layout_width="62dp"
                android:layout_height="62dp"/>

        </RelativeLayout>

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_below="@+id/linearLayout"
        android:layout_above="@+id/giveAttendance"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/giveAttendance"
        android:layout_width="match_parent"
        android:textAllCaps="false"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/profilebutton"
        android:textColor="@color/colorPrimaryDark1"
        android:text="Give Attendance"/>

</RelativeLayout>